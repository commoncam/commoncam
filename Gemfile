source 'https://rubygems.org'

# Use Figaro to store environment variables.
gem 'figaro'
gem 'rails', '4.2.3'
gem 'pg'

gem 'sass-rails', '~> 5.0'
gem 'uglifier', '>= 1.3.0'
gem 'coffee-rails', '~> 4.1.0'
source 'https://rails-assets.org' do
  gem 'rails-assets-jquery', '~> 1.11.3'
  gem 'rails-assets-jquery-ujs', '~> 1.0.4'
end

gem 'devise'

group :development, :test do
  gem 'byebug'
  gem 'web-console', '~> 2.0'
  gem 'spring'
end

group :production do
  # Use rails_12factor for Heroku
  gem 'rails_12factor'
end

