<p id="notice"><%= notice %></p>

<h1>Listing Checkins</h1>

<table>
  <thead>
    <tr>
      <th>Camera ID</th>
      <th>Exposure</th>
      <th>Location ID</th>
      <th>Summary</th>
      <th>Story</th>
      <th>Comments</th>
      <th>User email</th>
      <th>Updated by</th>
      <th>Is user editable</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @checkins.each do |checkin| %>
      <tr>
        <td><%= checkin.camera_id %></td>
        <td><%= checkin.exposure %></td>
        <td><%= checkin.location_id %></td>
        <td><%= checkin.summary %></td>
        <td><%= checkin.story %></td>
        <td><%= checkin.comments %></td>
        <td><%= checkin.user.email %></td>
        <td><%= checkin.updated_by %></td>
        <td><%= checkin.is_user_editable %></td>
        <td><%= link_to 'Show', checkin %></td>
        <td><%= link_to 'Edit', edit_checkin_path(checkin) %></td>
        <td><%= link_to 'Destroy', checkin, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

